    <string name="increase_quantity_text" translatable="false">+</string>

    <!-- Text to display on the select image button in the Detail layout -->
    <string name="select_image_text">Select image</string>

    <!-- Title for the activity to add a new product [CHAR LIMIT=20] -->
    <string name="detail_activity_title_new_product">Add a Product</string>

    <!-- Title for the activity to edit an existing product [CHAR LIMIT=20] -->
    <string name="detail_activity_title_edit_product">Edit Product</string>

    <!-- Label for editor menu option to save product and leave editor [CHAR LIMIT=20] -->
    <string name="action_save">Save</string>

    <!-- Label for editor overflow menu option that deletes the current product [CHAR LIMIT=20] -->
    <string name="action_delete">Delete</string>

    <!-- Label for editor menu option to order more from the current product via e-mail
     [CHAR LIMIT=20] -->
    <string name="action_send_mail">Order more</string>

